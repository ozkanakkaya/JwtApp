@model List<CategoryListResponseModel>
@{
    Layout = "_Layout";
}

<div class="container my-4 pt-4">
    <a asp-action="Create" asp-controller="Category">Kategori Ekle</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Definition</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <th>@item.Id</th>
                        <td>@item.Definition</td>
                        <th>
                            <a asp-action="Remove" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                            <a asp-action="Update" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Güncelle</a>

                        </th>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2">Herhangi bir data bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>
</div>