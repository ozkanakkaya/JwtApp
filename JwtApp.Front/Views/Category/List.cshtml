@model List<JwtApp.Front.Model.CategoryListResponseModel>
@{
    Layout = "_Layout";
}

<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Definition</th>
    </tr>
  </thead>
  <tbody>
        @if (Model?.Count>0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <th>@item.Id</th>
                    <td>@item.Definition</td>
                </tr>            
            }
        }
        else
        {
            <tr>
                <td colspan="2">Herhangi bir data bulunamadı.</td>
            </tr>
        }

  </tbody>
</table>